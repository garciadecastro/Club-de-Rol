{
  "swagger": "2.0",
  "info": {
    "title": "API Club de Rol",
    "description": "API para gestión de jugadores, juegos, campañas y partidas.",
    "version": "1.0.0"
  },
  "host": "localhost:2025",
  "basePath": "/",
  "schemes": [
    "http"
  ],
  "securityDefinitions": {
    "bearerAuth": {
      "type": "apiKey",
      "name": "Authorization",
      "in": "header",
      "description": "Ingrese el token con el formato: Bearer <token>"
    }
  },
  "paths": {
    "/api/jugadores/": {
      "post": {
        "description": "Registrar un nuevo jugador",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "nombre": { "example": "Carlos" },
                "email": { "example": "carlos@example.com" },
                "password": { "example": "PasswordSegura123!" },
                "passwordConfirm": { "example": "PasswordSegura123!" }
              }
            }
          }
        ],
        "responses": {
          "201": { "description": "Jugador registrado con éxito" },
          "400": { "description": "Datos inválidos" }
        }
      }
    },
    "/api/jugadores/login": {
      "post": {
        "description": "Iniciar sesión",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "email": { "example": "carlos@example.com" },
                "password": { "example": "PasswordSegura123!" }
              }
            }
          }
        ],
        "responses": {
          "200": { "description": "Login exitoso (retorna token)" },
          "400": { "description": "Credenciales inválidas" }
        }
      }
    },
    "/api/juegos/": {
      "get": {
        "description": "Obtener lista de juegos (Filtros opcionales)",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
            { "name": "nombre", "in": "query", "type": "string" },
            { "name": "editorial", "in": "query", "type": "string" },
            { "name": "categoria", "in": "query", "type": "string" }
        ],
        "responses": {
          "200": { "description": "OK" },
          "401": { "description": "No autorizado" }
        }
      },
      "post": {
        "description": "Crear Juego",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "nombre": { "example": "Dungeons & Dragons" },
                "editorial": { "example": "Wizards" },
                "precio": { "example": 50000 },
                "year": { "example": 2014 },
                "categoria": { "example": "Rol" },
                "imagen": { "example": "url.jpg" }
              }
            }
          }
        ],
        "responses": {
          "201": { "description": "Created" }
        }
      }
    },
    "/api/juegos/{id}": {
      "get": {
        "description": "Ver Juego por ID",
        "security": [{ "bearerAuth": [] }],
        "parameters": [{ "name": "id", "in": "path", "required": true, "type": "string" }],
        "responses": { "200": { "description": "OK" } }
      },
      "delete": {
        "description": "Borrar Juego (Soft Delete)",
        "security": [{ "bearerAuth": [] }],
        "parameters": [{ "name": "id", "in": "path", "required": true, "type": "string" }],
        "responses": { "202": { "description": "Accepted" } }
      }
    },
    "/api/campanas/": {
      "get": {
        "description": "Ver mis campañas",
        "security": [{ "bearerAuth": [] }],
        "responses": { "200": { "description": "OK" } }
      },
      "post": {
        "description": "Crear Campaña",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "titulo": { "example": "La maldición de Strahd" },
                "sistema": { "example": "D&D 5e" },
                "descripcion": { "example": "Campaña de terror gótico" },
                "imagen": { "example": "url_imagen.jpg" }
              }
            }
          }
        ],
        "responses": { "201": { "description": "Created" } }
      }
    },
    "/api/partidas/": {
      "post": {
        "description": "Crear nueva sesión de juego",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "titulo": { "example": "Sesión 1: La llegada" },
                "fecha": { "example": "2023-10-31" },
                "campana_id": { "example": "ID_DE_MONGO" }
              }
            }
          }
        ],
        "responses": { "201": { "description": "Created" } }
      }
    }
  }
}